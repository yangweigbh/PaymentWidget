<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="@drawable/blackcornerbackground">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:id="@+id/item1">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:scaleType="fitCenter"
            android:id="@+id/icon1"
            android:layout_marginTop="@dimen/icon_margin_top"
            android:layout_marginBottom="@dimen/icon_margin_bottom"
            tools:src="@drawable/wx_shoukuan"/>
        <TextView
            android:text="@string/wechat_barcode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/text_margin"
            android:gravity="center_horizontal"
            android:id="@+id/wechat_barcode"
            android:textSize="@dimen/text_size"
            android:textColor="@android:color/white"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:id="@+id/item2">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:scaleType="fitCenter"
            android:id="@+id/icon2"
            android:layout_marginTop="@dimen/icon_margin_top"
            android:layout_marginBottom="@dimen/icon_margin_bottom"
            tools:src="@drawable/alipay_scan"/>
        <TextView
            android:text="@string/alipay_barcode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/text_margin"
            android:gravity="center_horizontal"
            android:id="@+id/alipay_barcode"
            android:textSize="@dimen/text_size"
            android:textColor="@android:color/white"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:id="@+id/item3">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:scaleType="fitCenter"
            android:layout_marginTop="@dimen/icon_margin_top"
            android:layout_marginBottom="@dimen/icon_margin_bottom"
            android:id="@+id/icon3"
            tools:src="@drawable/alipay_fukuan"/>
        <TextView
            android:text="@string/alipay_paycode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/text_margin"
            android:gravity="center_horizontal"
            android:id="@+id/alipay_paycode"
            android:textSize="@dimen/text_size"
            android:textColor="@android:color/white"/>
    </LinearLayout>
</LinearLayout>
